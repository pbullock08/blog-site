{{#each posts as |post|}}
<div class="card">
    <div class="card-header">
        Posted by {{user.username}} on {{date_created}}
    </div>
    <div class="card-body">
        <h5 class="card-title">
            <a href="/api/post/{{id}}">{{title}}</a>
        </h5>
        <p class="card-text">{{content}}</p>
    </div>
</div>
{{/each}}